&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 400
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      MAP_CONSISTENT
    &END QS
    &SCF
      MAX_SCF 30
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      &OT 
         PRECONDITIONER FULL_SINGLE_INVERSE
         MINIMIZER DIIS
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
    &POISSON
       PERIODIC NONE
       PSOLVER MT
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 16.0 16.0 16.0
      PERIODIC NONE
    &END CELL
  &END SUBSYS
&END FORCE_EVAL
